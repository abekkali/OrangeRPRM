<div class="modal fade" id="modifyOPModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modifier Operateur</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="updateOperateurForm" asp-controller="Manage" asp-action="UpdateOperateur" method="post" asp-anti-forgery="true">
