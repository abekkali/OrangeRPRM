    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.5.0/css/flag-icon.min.css">


    

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">
    
</head>
<body>
    
    @if (User.Identity.IsAuthenticated)
    {
        var user = await _userManager.GetUserAsync(User);      

        if (user.EmailConfirmed)
        {
        <partial name="_HeaderAndSideBar" />
        }
    }
      
        <main id="main" class="main">
            @RenderBody()
        </main>
    

 
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; 2023 <strong><span> Orange-RPRM</span></strong>
        </div>
      
    </footer><!-- End Footer -->
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
    <a href="#" id="back-to-bottom" class="back-to-bottom d-flex align-items-center justify-content-center"><i class="bi bi-arrow-down-short"></i></a>


    <!-- Vendor JS Files -->
    <script src="~/js/jquery.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/datatables/datatables_jquery.js"></script>
    <script src="~/assets/vendor/datatables/datatables.js"></script>
    <script src="~/js/site.js"></script>
    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
