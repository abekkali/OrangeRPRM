@using System.Reflection

@{
}
<div class="modal fade" id="droitUser" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Droit d'acces </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Users" asp-action="UpdatePerm" method="post" asp-anti-forgery="true">
                <div class="modal-body">
                    <table style="width:100%">

                        @{
                            @foreach (var className in Model.ClassNames)
                            {
                                <tr>
                                    <td>@className</td>
                                    <td><input type="checkbox" class="form-check-input" /><label>Lecture</label></td>
                                    <td><input type="checkbox" class="form-check-input" /><label>Modifier</label></td>
                                </tr>
                            }
                            System.Diagnostics.Debug.WriteLine("Finished processing all model types");
                        }

                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
